{
	"compilerOptions": {
		"target": "es2022",
		"sourceMap": true,
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"baseUrl": ".",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"paths": {
			"@structs/*": [
				"src/structs/*"
			],
			"@lib/*": [
				"src/lib/*"
			],
			"@app": [
				"src/app"
			]
		}
	},
	"exclude": [
		"node_modules"
	]
}
